<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/gap_medium"
    android:gravity="center_vertical"
    android:background="@color/condition_neutral">

    <ImageView
        android:id="@+id/item_weather_data_icon"
        android:layout_width="@dimen/small_icon_width"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/gap_medium"
        android:layout_marginEnd="@dimen/gap_medium"
        android:src="@drawable/clear_day"
        android:contentDescription="@string/current_conditions"/>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/item_weather_data_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/gap_small"
            android:textAppearance="@style/AppTheme.Text.Forecast.Body.Bold"
            android:text="@string/mock_time"/>

        <TextView
            android:id="@+id/item_weather_data_conditions"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="@style/AppTheme.Text.Forecast.Body"
            android:text="@string/mock_conditions"/>

    </LinearLayout>

    <TextView
        android:id="@+id/item_weather_data_temperature"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="@style/AppTheme.Text.Forecast.MediumTemperature"
        android:text="@string/loading_placeholder_temperature"/>

</LinearLayout>