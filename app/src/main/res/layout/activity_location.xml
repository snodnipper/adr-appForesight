<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/activity_location_use_current"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/location_use_current"
        android:background="?android:selectableItemBackground"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/divider_height"
        android:background="@color/divider_color" />

    <fragment
        android:id="@+id/activity_location_search_fragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:name="com.livenation.foresight.ui.LocationSearchFragment"
        tools:layout="@layout/fragment_location_search" />

</LinearLayout>